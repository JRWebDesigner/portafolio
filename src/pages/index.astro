---
import MyProyects from "../components/MyProyects.astro";
import Layout from "../layouts/Layout.astro";
---
<Layout title="PORFORIO | JOSUE MAMANI AGREDA">
  <div class="py-6 font-bold text-2xl flex justify-center items-center gap-7">
    <img class="rounded-full" width="200px" src="/elAmorDeMiVida.jpg" alt="">
    <h1 id="title"></h1>
  </div>
  <MyProyects />
  <h2>Mis conocimientos</h2>
  <h2>Sobre mi</h2>
</Layout>
<script>
  const title=document.getElementById('title')
  const abcd='-abcdefghijklmnopqrst|'
  const cad='PORTAFOLIO | JOSUE MARTIN MAMANI AGREDA'
  for (let i = 0; i < cad.length; i++) {
    const caracter = cad[i];
    
    for (let j = 0; j < abcd.length; j++) {
      const element = abcd[j];
      if(caracter === '-'){
        title.innerText+=' '
        break
      }
      if(element.toUpperCase()===caracter){
        title.innerText+=caracter
        break
      }
    }
  }
</script>
