---
import Proyects from "./Proyects.astro";
---

<h2 class="max-w-[1000px] w-[90%] m-auto my-24">My proyects</h2>
  <div class="max-w-[2000px] w-[90%] m-auto flex flex-col items-center">
    <Proyects/>
    <a class="p-2 w-[40%] rounded-2xl font-bold text-center text-white text-[17px] hover:bg-gray-300 hover:shadow-lg hover:text-blue-950 duration-200 ease-linear border-[2px] mt-10" href="">View more</a>
  </div>
  <style>
    a{
        animation: infinite 2s bgAnimate;
    }
    @keyframes bgAnimate {
        0%{
            border-color: #08fc00;
        }
        50%{
            border-color: rgb(88, 105, 255);
        }
        100%{
            border-color: #08fc00;
        }
    }
  </style>
  <script>
    const opacity=document.querySelectorAll('.opacity-20')

    let options = {
    root: null,
    rootMargin: "0px",
    threshold: 0.5,
  };

  function Opacity(a, b) {
    a.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.remove("opacity-20");
      }
    });
  }

 const observerO = new IntersectionObserver(Opacity, options);
 opacity.forEach(container=>{
  observerO.observe(container)
 })
  </script>